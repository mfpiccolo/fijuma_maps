
<div class="floatme"><h1>Listing events</h1></div>

<div id="map_canvas">
    <%= gmaps4rails(@json) %>
<div>

<div class="infoblock">
<table>
    <tr><td>
        <%= form_tag(searches_path, :method => "get") do %>
          <%= label_tag(:q, "Search for:") %>
          <%= text_field_tag(:q) %>
          <%= submit_tag("Search") %>
        <% end %>

    </td><tr>
  <tr>
    <th>Event</th>
    <th>Time</th>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.address %></td>
    <td><%= event.longitude %></td>
    <td><%= event.latitude %></td>
    <td><%= event.gmaps %></td>
    <td><%= link_to 'More Info', event, :class => 'btn btn-success btn-small' %></td>
  </tr>
<% end %>
</table>
</div>

<br />

<%= link_to 'New Location', new_event_path %>
